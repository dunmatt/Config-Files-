" Turn on syntax highlighting
syntax on
" Turn on line numbering
set number
" Turn on the bar at the bottom that shows cursor position
set ruler

" Enable automatic indenting via 'indentexpr'
filetype indent on
filetype plugin on

set expandtab
set shiftwidth=4
set tabstop=4

set modeline

set background=dark
set t_Co=256
colorscheme desert256

" Enable mouse wheel scrolling
set mouse=a
